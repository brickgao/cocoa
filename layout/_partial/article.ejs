<div class="post">
  <div class="post-title"><%= page.title %></div>
  <div class="post-date"><%= date(page.date, "YYYY/MM/DD") %></div>
  <div class="post-categories">
    <%- list_categories(page.categories, {
      show_count: false,
      class: 'post-category'
    }) %>
  </div>
  <div class="post-tags">
    <%- list_tags(page.tags, {
      show_count: false,
      class: 'post-tag'
    }) %>
  </div>
  <div class="post-content">
    <%- page.content %>
  </div>
</div>